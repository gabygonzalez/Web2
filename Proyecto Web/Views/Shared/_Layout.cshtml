<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Dashboard - Bootstrap Admin Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600"
          rel="stylesheet">
    <link href="~/css/font-awesome.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/pages/dashboard.css" rel="stylesheet">
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="index.html">Bootstrap Admin Template </a>
                <div class="nav-collapse">
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="icon-cog"></i> Account <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="">Settings</a></li>
                                <li><a href="">Help</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="icon-user"></i> EGrappler.com <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="">Profile</a></li>
                                <li><a href="">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="navbar-search pull-right">
                        <input type="text" class="search-query" placeholder="Search">
                    </form>
                </div>
                <!--/.nav-collapse -->
            </div>
            <!-- /container -->
        </div>
        <!-- /navbar-inner -->
    </div>
    <!-- /navbar -->
    <div class="subnavbar">
        <div class="subnavbar-inner">
            <div class="container">
                <ul class="mainnav">
                    <!-- copiar menu del proyecto pasado aquí-->
                    <li><a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Logeo">Inicio</a></li>

                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-dashboard"></i><span>Alta Catalogos</span> <b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Proyecto" asp-action="Create">Proyecto</a></li>
                            <li><a asp-controller="Personas" asp-action="Create">Cliente/Proveedor</a></li>
                            <li><a asp-controller="Cuentas" asp-action="Create">Cuenta</a></li>
                            <li><a asp-controller="GrupoMovi" asp-action="Create">Grupo</a></li>
                            <li><a asp-controller="Empresas" asp-action="Create">Empresa</a></li>
                        </ul>
                    </li>
                    <li><a class="navbar-brand" asp-area="" asp-controller="Movimientos" asp-action="Create"><i class="icon-list-alt"></i><span>Registro Movimientos</span> </a> </li>

                    <li class="dropdown">
                        <a asp-controller="" asp-action="" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-facetime-video"></i><span>Mostrar</span><b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Personas" asp-action="Details">Clientes</a></li>
                            <li><a asp-controller="Personas" asp-action="Details">Proveedores</a></li>
                            <li><a asp-controller="Cuentas" asp-action="Details">Cuentas y Grupos</a></li>
                            <li><a asp-controller="Movimientos" asp-action="Details">Movimientos</a></li>
                            <li><a asp-controller="Proyectos" asp-action="Details">Proyectos</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a asp-controller="" asp-action="" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-long-arrow-down"></i><span>Usuario</span> <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <c:if test="${sessionScope.tipo == 1}">
                                <li><a asp-controller="Usuarios" asp-action="Create">Crear nuevo usuario</a></li>
                                <li><a asp-controller="Usuarios" asp-action="Details">Consulta usuarios</a></li>
                            </c:if>
                            <li><a asp-controller="Usuarios" asp-action="Edit">Configuración</a></li>
                            <li><a asp-controller="Login" asp-action="Index">Cerrar sesión</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /container -->
        </div>
        <!-- /subnavbar-inner -->
    </div>
    <!-- /subnavbar -->
    <div class="main">
        @RenderBody()
        <!-- /main-inner -->
    </div>
    <div class="footer">
        <div class="footer-inner">
            <div class="container">
                <div class="row">
                    <div class="span12"> &copy; 2013 <a href="#">Bootstrap Responsive Admin Template</a>. </div>
                    <!-- /span12 -->
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /footer-inner -->
    </div>
    <!-- /footer -->
    <!-- Le javascript
    ================================================== -->
    <script src="~/js/jquery-1.7.2.min.js"></script>
    <script src="~/js/excanvas.min.js"></script>
    <script src="~/js/chart.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.js"></script>
</body>

</html>
